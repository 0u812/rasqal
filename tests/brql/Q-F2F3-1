PREFIX foaf: <http://xmlns.com/foaf/0.1/>

SELECT ?name1 ?name2 ?hpage2
WHERE
  (?x foaf:knows ?y)
  SOURCE <http:D2> (?x foaf:age ?n)
  (?x foaf:age ?n)
  AND ?n < 18
  (?x foaf:name ?name1 )

  SOURCE <http:D2> (?x foaf:status ?status)

  SOURCE ?src (?x foaf:status1 ?status1)
  SOURCE ?src (?x foaf:status2 ?status2)
 
  [ ( ?y foaf:name ?name2 )
    ( ?y foaf:age  ?m)
    AND ?m < 18
  ]

